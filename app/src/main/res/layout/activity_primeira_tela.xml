<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ListView
        android:id="@+id/listViewServicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCadastrarServico"
        android:layout_marginTop="20dp"
        android:divider="@color/colorAccent"></ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonCadastrarServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        android:clickable="true"
        android:onClick="AddServico"
        app:backgroundTint="@color/colorAzulMarinho"
        app:fabSize="normal"
        app:rippleColor="@color/colorButtonFacebook"
        app:srcCompat="@android:drawable/ic_menu_add" />

</FrameLayout>