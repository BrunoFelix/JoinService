<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joinservice.joinservice.register.RegisterEmailActivity"
    android:gravity="center"
    android:padding="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewCadastroEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_phone"
            android:layout_marginBottom="55dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicione seu número de telefone"
            android:gravity="center"
            android:textSize="13pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Você pode atualizar ou remover a qualquer momento"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/editTextCadastroPhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pular"
            style="?attr/borderlessButtonStyle"
            />



    </LinearLayout>

</RelativeLayout>

