<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".principal.consumer.registrer.RegisterOrderCategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewServicoUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@drawable/icon_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/textViewServicoUsuarioNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Profissional"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/colorPreto"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewServicoUsuarioData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Data"
                    android:textSize="13dp"/>

                <TextView
                    android:id="@+id/textViewServicoUsuarioValorOfertado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Valor"
                    android:textSize="13dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewServicoUsuarioEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Email:"
                    android:textSize="13dp"/>

                <TextView
                    android:id="@+id/textViewServicoUsuarioTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Telefone"
                    android:textSize="13dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewServicoUsuarioDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:layout_marginBottom="1dp"
                android:textSize="11dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
