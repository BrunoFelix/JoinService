<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joinservice.joinservice.ServicoFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/btnRealizarServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/screen_border"
        android:textColor="@color/colorBranco"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:text="@string/texto_quero_realizar_servico_fragment_servico"/>

    <FrameLayout
        android:id="@+id/frameLayoutContainerMapServico"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="200dp">
    </FrameLayout>

    <TextView
        android:id="@+id/textViewDescricaoFragmentServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="22dp"
        android:textColor="@color/colorPreto"
        android:text="Descrição do serviço"/>

    <TextView
        android:id="@+id/textViewPrazoFragmentServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:text="Prazo"
        android:paddingBottom="15dp"
        android:background="@drawable/text_view_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:text="@string/texto_anunciantes_fragment_servico"/>

    <TextView
        android:id="@+id/textViewUsuarioFragmentServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Prazo"
        android:paddingBottom="15dp"
        android:background="@drawable/text_view_border"/>

    <TextView
        android:id="@+id/textViewPrestIntFragmentServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/texto_profissionais_interessados_fragment_servico"/>

    <ListView
        android:id="@+id/listViewPrestInt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>




</LinearLayout>
