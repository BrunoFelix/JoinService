<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joinservice.joinservice.register.RegisterEmailActivity"
    android:gravity="center"
    android:padding="35dp"
    android:background="#41ffffff">

    <ImageView
        android:id="@+id/imageViewCadastroEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_user"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_cadastro_foto_1"
                android:gravity="center"
                android:textSize="13pt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_cadastro_foto_2"
                android:gravity="center"
                android:layout_marginBottom="45dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_cadastro_foto_1"
                android:onClick="proximo"
                android:background="@drawable/screen_border"
                android:textColor="@color/colorBranco"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

