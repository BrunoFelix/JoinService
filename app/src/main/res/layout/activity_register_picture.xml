<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joinservice.joinservice.register.RegisterEmailActivity"
    android:gravity="center"
    android:padding="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewCadastroEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_user"
            android:layout_marginBottom="55dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicione foto ao perfil"
            android:gravity="center"
            android:textSize="13pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicione uma foto de perfil para que outros usuários saibam quem você é"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Foto"
            android:onClick="proximo"
            android:background="@drawable/screen_border"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pular"
            style="?attr/borderlessButtonStyle"
            />



    </LinearLayout>

</RelativeLayout>

