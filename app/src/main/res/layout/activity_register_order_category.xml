<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joinservice.joinservice.principal.consumer.registrer.RegisterOrderCategoryActivity">

    <LinearLayout
        android:id="@+id/linearLayoutRegisterOrderCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/texto_cadastro_servico_categoria_1"
            android:textSize="13pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/texto_cadastro_servico_categoria_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayoutRegisterOrderCategory"
        android:orientation="vertical">

            <Button
                android:id="@+id/buttomCelETelRegisterOrderCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_novo_registro_01"
                android:background="@drawable/screen_border"
                android:textColor="@color/colorBranco"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/buttomEletroRegisterOrderCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_novo_registro_02"
                android:background="@drawable/screen_border"
                android:textColor="@color/colorBranco"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/buttomMovEDecRegisterOrderCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_novo_registro_03"
                android:background="@drawable/screen_border"
                android:textColor="@color/colorBranco"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/buttomAdminRegisterOrderCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_novo_registro_04"
                android:background="@drawable/screen_border"
                android:textColor="@color/colorBranco"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/buttomReformasRegisterOrderCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_novo_registro_05"
                android:background="@drawable/screen_border"
                android:textColor="@color/colorBranco"
                android:layout_marginBottom="1dp"/>


    </LinearLayout>

</RelativeLayout>
